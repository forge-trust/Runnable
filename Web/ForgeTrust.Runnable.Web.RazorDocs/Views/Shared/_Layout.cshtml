<!DOCTYPE html>
<html lang="en" class="h-full bg-slate-900 border-slate-800" style="scrollbar-gutter: stable;">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - RazorDocs</title>
    <script src="https://unpkg.com/@@tailwindcss/browser@4.1.18" integrity="sha384-y0axVOJIfo0bJOmTOnyRyUjrqjUotl7L/k6mzSwu2SSrB3r7P+b0cSFkiod+js0X" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com"/>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin/>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet"/>
    <style type="text/tailwindcss">
        @@theme {
            --font-outfit: "Outfit", ui-sans-serif, system-ui;
        }
        body {
            font-family: var(--font-outfit);
            scrollbar-width: thin;
            scrollbar-color: #334155 #0f172a;
        }
        
        /* Custom scrollbar for dark theme */
        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }
        ::-webkit-scrollbar-track {
            background: #0f172a;
        }
        ::-webkit-scrollbar-thumb {
            background: #334155;
            border-radius: 4px;
        }
        ::-webkit-scrollbar-thumb:hover {
            background: #475569;
        }

        /* Standard scrollbar properties for Firefox and others */
        * {
            scrollbar-width: thin;
            scrollbar-color: #334155 #0f172a;
        }

        .docs-content {
            max-width: 80ch;
            color: #cbd5e1;
            font-size: 1.025rem;
            line-height: 1.75;
        }

        .docs-content .doc-type {
            margin-top: 2.5rem;
            padding-top: 1.5rem;
            border-top: 1px solid #1e293b;
        }

        .docs-content .doc-type:first-child {
            margin-top: 0;
            padding-top: 0;
            border-top: 0;
        }

        .docs-content .doc-type-header {
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            gap: 0.75rem;
            margin-bottom: 0.75rem;
        }

        .docs-content .doc-kind {
            display: inline-flex;
            align-items: center;
            border: 1px solid #334155;
            border-radius: 9999px;
            padding: 0.2rem 0.65rem;
            font-size: 0.7rem;
            letter-spacing: 0.08em;
            text-transform: uppercase;
            color: #93c5fd;
            background: rgba(30, 41, 59, 0.8);
            font-weight: 600;
        }

        .docs-content h2 {
            font-size: 1.95rem;
            line-height: 1.2;
            font-weight: 700;
            color: #f8fafc;
            margin: 0;
        }

        .docs-content .doc-method-group {
            margin: 1.25rem 0 0 1rem;
            padding-left: 1rem;
            border-left: 1px solid #1e293b;
        }

        .docs-content .doc-method-group-header {
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            gap: 0.75rem;
            margin-bottom: 0.75rem;
        }

        .docs-content h3 {
            font-size: 1.3rem;
            line-height: 1.35;
            margin: 0;
            color: #e2e8f0;
        }

        .docs-content .doc-overload-count {
            font-size: 0.78rem;
            color: #94a3b8;
        }

        .docs-content .doc-overload {
            border: 1px solid #334155;
            border-radius: 0.75rem;
            margin-bottom: 0.75rem;
            background: rgba(15, 23, 42, 0.55);
            overflow: hidden;
        }

        .docs-content .doc-overload > summary {
            cursor: pointer;
            list-style: none;
            padding: 0.85rem 1rem;
            display: flex;
            align-items: flex-start;
            gap: 0.6rem;
            background: rgba(15, 23, 42, 0.65);
        }

        .docs-content .doc-overload > summary::-webkit-details-marker {
            display: none;
        }

        .docs-content .doc-overload > summary::before {
            content: "+";
            color: #38bdf8;
            font-weight: 700;
            line-height: 1;
            margin-top: 0.15rem;
        }

        .docs-content .doc-overload[open] > summary::before {
            content: "-";
        }

        .docs-content .doc-overload > summary code {
            color: #e2e8f0;
            font-weight: 500;
            white-space: normal;
            word-break: break-word;
        }

        .docs-content .doc-signature .sig-return {
            color: #7dd3fc;
        }

        .docs-content .doc-signature .sig-method {
            color: #f8fafc;
            font-weight: 700;
        }

        .docs-content .doc-signature .sig-generic {
            color: #86efac;
        }

        .docs-content .doc-signature .sig-type {
            color: #a5b4fc;
        }

        .docs-content .doc-signature .sig-parameter {
            color: #fcd34d;
        }

        .docs-content .doc-signature .sig-modifier {
            color: #f9a8d4;
        }

        .docs-content .doc-signature .sig-operator {
            color: #cbd5e1;
        }

        .docs-content .doc-signature .sig-literal {
            color: #fca5a5;
        }

        .docs-content .doc-overload-body {
            padding: 0.9rem 1rem 1rem;
            border-top: 1px solid #1e293b;
        }

        .docs-content .doc-summary > p {
            margin: 0 0 0.8rem;
            color: #e2e8f0;
        }

        .docs-content .doc-namespace-intro {
            margin: 0 0 1.25rem;
            padding: 1rem 1.1rem;
            border: 1px solid #1e293b;
            border-radius: 0.75rem;
            background: rgba(15, 23, 42, 0.42);
        }

        .docs-content .doc-namespace-intro p:last-child {
            margin-bottom: 0;
        }

        .docs-content .doc-namespace-groups {
            margin: 0 0 1.1rem;
            padding: 0.85rem 1rem;
            border: 1px solid #1e293b;
            border-radius: 0.7rem;
            background: rgba(15, 23, 42, 0.32);
        }

        .docs-content .doc-namespace-groups ul {
            margin: 0.2rem 0 0;
            padding-left: 1rem;
        }

        .docs-content .doc-namespace-groups a {
            color: #7dd3fc;
        }

        .docs-content .doc-namespace-groups a:hover {
            color: #22d3ee;
        }

        .docs-content .doc-remarks > p {
            color: #94a3b8;
        }

        .docs-content .doc-typeparams,
        .docs-content .doc-params,
        .docs-content .doc-returns,
        .docs-content .doc-exceptions,
        .docs-content .doc-remarks,
        .docs-content .doc-example {
            margin-top: 0.9rem;
        }

        .docs-content h4 {
            margin: 0 0 0.4rem;
            font-size: 0.72rem;
            letter-spacing: 0.09em;
            text-transform: uppercase;
            color: #94a3b8;
            font-weight: 600;
        }

        .docs-content .doc-typeparams ul,
        .docs-content .doc-params ul,
        .docs-content .doc-exceptions ul {
            margin: 0;
            padding-left: 0;
            list-style: none;
            display: grid;
            gap: 0.45rem;
        }

        .docs-content .doc-typeparams li,
        .docs-content .doc-params li,
        .docs-content .doc-exceptions li {
            display: grid;
            grid-template-columns: minmax(9rem, auto) 1fr;
            gap: 0.7rem;
            align-items: start;
            color: #cbd5e1;
        }

        .docs-content .doc-typeparams li code,
        .docs-content .doc-params li code,
        .docs-content .doc-exceptions li code {
            background-color: #0f172a;
            border: 1px solid #334155;
            border-radius: 0.35rem;
            padding: 0.08rem 0.4rem;
            color: #93c5fd;
            font-size: 0.86rem;
            width: fit-content;
        }

        .docs-content p {
            margin: 0 0 0.75rem;
        }

        .docs-content pre {
            background-color: #1e293b;
            border-radius: 0.5rem;
            padding: 0.9rem;
            border: 1px solid #334155;
            white-space: pre-wrap;
            word-break: break-word;
            margin: 0.65rem 0 0.85rem;
        }

        .docs-content code {
            font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", monospace;
        }
    </style>
    <rw:scripts/>
</head>
<body class="h-full flex flex-col text-slate-200 overflow-hidden">
<a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-0 focus:left-0 focus:z-50 focus:p-4 focus:bg-slate-900 focus:text-white">Skip to content</a>
<div class="flex h-full">
    <!-- Sidebar -->
    <aside class="w-64 flex-shrink-0 bg-slate-950 border-r border-slate-800 flex flex-col">
        <div class="p-6">
            <a href="/docs" class="text-2xl font-bold bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">
                RazorDocs
            </a>
        </div>
        <nav class="flex-grow overflow-y-auto px-4 pb-4 space-y-1" aria-label="Documentation navigation">
            @await Component.InvokeAsync("Sidebar")
        </nav>
        <div class="p-4 border-t border-slate-800 text-xs text-slate-500 text-center">
            Powered by RazorWire
        </div>
    </aside>

    <!-- Main Content -->
    <main id="main-content" role="main" class="flex-grow overflow-y-auto bg-slate-900">
        <rw:island id="doc-content">
            <div class="max-w-6xl mx-auto px-8 py-12">
                @RenderBody()
            </div>
        </rw:island>
    </main>
</div>

@await RenderSectionAsync("Scripts", required: false)
<script>
    (() => {
        document.addEventListener("click", event => {
            if (event.defaultPrevented) {
                return;
            }

            if (event.button !== 0 || event.metaKey || event.ctrlKey || event.shiftKey || event.altKey) {
                return;
            }

            const clickTarget = event.target;
            if (!(clickTarget instanceof Element)) {
                return;
            }

            const anchorLink = clickTarget.closest("a[data-doc-anchor-link='true']");
            if (!anchorLink) {
                return;
            }

            if (anchorLink.target && anchorLink.target !== "_self") {
                return;
            }

            const targetUrl = new URL(anchorLink.href, window.location.origin);
            if (targetUrl.pathname !== window.location.pathname || !targetUrl.hash) {
                return;
            }

            const targetId = decodeURIComponent(targetUrl.hash.slice(1));
            const target = document.getElementById(targetId);
            if (!target) {
                return;
            }

            event.preventDefault();
            history.replaceState(null, "", targetUrl.hash);
            target.scrollIntoView({ behavior: "smooth", block: "start" });
        });
    })();
</script>
</body>
</html>
