@{
    ViewData["Title"] = "Reactivity";
}

<div class="mb-10 text-center sm:text-left">
    <h1 class="text-4xl font-bold tracking-tight text-slate-900 sm:text-5xl">Real-time <span class="text-indigo-600">Reactivity</span></h1>
    <p class="mt-4 text-lg text-slate-600 max-w-2xl">Experience high-performance, server-sent events with zero configuration and seamless view component integration.</p>
</div>

<div class="grid grid-cols-1 lg:grid-cols-12 gap-8 items-start">
    <div class="lg:col-span-8 space-y-8">
        <div class="card-premium">
            <div class="px-6 py-4 border-b border-slate-100 flex items-center justify-between bg-slate-50/50">
                <h2 class="text-sm font-semibold text-slate-900 uppercase tracking-wider">Live Activity Feed</h2>
                <div class="flex items-center gap-2">
                    <span class="flex h-2 w-2 rounded-full bg-emerald-500 animate-pulse"></span>
                    <span class="text-xs font-medium text-emerald-600">CONNECTED</span>
                </div>
            </div>
            <div class="p-6">
                <rw:stream-source channel="reactivity" />
                
                <div class="mb-6">
                    <partial name="_MessageForm" model='@(Context.Request.Cookies["razorwire-username"] ?? "")' />
                </div>

                <ul id="messages" class="divide-y divide-slate-100 max-h-[500px] overflow-y-auto pr-2 custom-scrollbar">
                    <li id="messages-empty" class="py-10 text-center">
                        <div class="flex flex-col items-center text-slate-400">
                            <svg class="w-12 h-12 mb-3 opacity-20" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path></svg>
                            <span class="text-sm italic">Waiting for incoming signals...</span>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    
    <div class="lg:col-span-4 space-y-6">
        <div class="card-premium p-6">
            <partial name="_UserRegistration" />
        </div>
        
        <div class="card-premium">
            <div class="px-6 py-4 border-b border-slate-100 bg-slate-50/50">
                <h3 class="text-sm font-bold text-slate-800 uppercase tracking-tight">Active Island</h3>
            </div>
            <div class="p-6">
                <rw:island id="sidebar" src="/Reactivity/Sidebar" loading="lazy">
                    <div class="flex items-center gap-3 text-slate-400">
                        <div class="animate-spin h-4 w-4 border-2 border-indigo-500 border-t-transparent rounded-full"></div>
                        <span class="text-sm">Fetching component...</span>
                    </div>
                </rw:island>
            </div>
        </div>
    </div>
</div>

<style>
    .custom-scrollbar::-webkit-scrollbar {
        width: 4px;
    }
    .custom-scrollbar::-webkit-scrollbar-track {
        background: transparent;
    }
    .custom-scrollbar::-webkit-scrollbar-thumb {
        background: #e2e8f0;
        border-radius: 10px;
    }
    .custom-scrollbar::-webkit-scrollbar-thumb:hover {
        background: #cbd5e1;
    }
</style>
