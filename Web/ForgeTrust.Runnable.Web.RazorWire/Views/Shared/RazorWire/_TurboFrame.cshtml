@using ForgeTrust.Runnable.Web.RazorWire.Turbo
@model TurboFrameViewModel
<turbo-frame id="@Model.Id">
    @if (!string.IsNullOrEmpty(Model.PartialView))
    {
        @await Html.PartialAsync(Model.PartialView, Model.Model)
    }
    else if (!string.IsNullOrEmpty(Model.ViewComponent))
    {
        @await Component.InvokeAsync(Model.ViewComponent, Model.Model)
    }
</turbo-frame>
