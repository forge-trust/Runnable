@{
    ViewData["Title"] = "RazorWire Demo";
}

<h1>RazorWire Demo</h1>

<div class="row">
    <div class="col-8">
        <div class="card mb-4">
            <div class="card-header">SSE Streams</div>
            <div class="card-body">
                <rw:stream-source channel="demo" />
                
                <partial name="_MessageForm" model='@(Context.Request.Cookies["razorwire-username"] ?? "")' />

                <ul id="messages" class="list-group mt-3">
                    <li id="messages-empty" class="list-group-item text-muted">Messages will appear here via SSE...</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-4">
        <partial name="_UserRegistration" />
        
        <div class="card">
            <div class="card-header">Islands</div>
            <div class="card-body">
                <rw:island id="sidebar" src="/Demo/Sidebar" loading="lazy">
                    <div class="alert alert-info">Loading sidebar...</div>
                </rw:island>
            </div>
        </div>
    </div>
</div>
