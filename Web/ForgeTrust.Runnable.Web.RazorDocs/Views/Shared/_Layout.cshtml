<!DOCTYPE html>
<html lang="en" class="h-full bg-slate-900 border-slate-800" style="scrollbar-gutter: stable;">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - RazorDocs</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <rw:scripts/>
</head>
<body class="h-full flex flex-col text-slate-200 overflow-hidden">
<a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-0 focus:left-0 focus:z-50 focus:p-4 focus:bg-slate-900 focus:text-white">Skip to content</a>
<div class="flex h-full">
    <!-- Sidebar -->
    <aside class="w-64 flex-shrink-0 bg-slate-950 border-r border-slate-800 flex flex-col">
        <div class="p-6">
            <a href="/" class="text-2xl font-bold bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">
                RazorDocs
            </a>
        </div>
        <nav class="flex-grow overflow-y-auto px-4 pb-4 space-y-1" aria-label="Documentation navigation">
            @RenderSection("Sidebar", required: false)
        </nav>
        <div class="p-4 border-t border-slate-800 text-xs text-slate-500 text-center">
            Powered by RazorWire
        </div>
    </aside>

    <!-- Main Content -->
    <main id="main-content" role="main" class="flex-grow overflow-y-auto bg-slate-900">
        <div class="max-w-4xl mx-auto px-8 py-12">
            @RenderBody()
        </div>
    </main>
</div>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
