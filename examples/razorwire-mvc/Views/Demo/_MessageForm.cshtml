@model string

<form id="message-form" asp-action="PublishMessage" method="post" rw-active="true">
    <input type="hidden" name="username" value="@Model">
    <div class="input-group mb-3">
        <input type="text" name="message" class="form-control" placeholder="Type a message..." autofocus>
        <button class="btn btn-primary" type="submit">Publish SSE</button>
    </div>
</form>

