<!DOCTYPE html>
<html lang="en" class="h-full bg-slate-50">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RazorWire</title>
    <meta name="view-transition" content="same-origin" />
    <script src="https://unpkg.com/@@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style type="text/tailwindcss">
        @@theme {
            --font-outfit: "Outfit", ui-sans-serif, system-ui;
        }
        body {
            font-family: var(--font-outfit);
        }
        
        turbo-frame {
            display: block;
        }

        ::view-transition-old(root),
        ::view-transition-new(root) {
            animation-duration: 0s;
        }

        /* Synchronized Inchworm Crawl 
           Matches the linear() movement: 
           Moves: 0-15%, 25-40%, 50-65%, 75-90%
           Pauses: 15-25%, 40-50%, 65-75%, 90-100%
        */
        @@keyframes inchworm-crawl {
            /* Move 1 */
            0% { transform: scale(1, 1); }
            7.5% { transform: scale(1.25, 0.75); }
            15% { transform: scale(1, 1); }
            
            /* Pause 1 (15-25%) */
            25% { transform: scale(1, 1); }
            
            /* Move 2 */
            32.5% { transform: scale(1.25, 0.75); }
            40% { transform: scale(1, 1); }
            
            /* Pause 2 (40-50%) */
            50% { transform: scale(1, 1); }
            
            /* Move 3 */
            57.5% { transform: scale(1.25, 0.75); }
            65% { transform: scale(1, 1); }
            
            /* Pause 3 (65-75%) */
            75% { transform: scale(1, 1); }
            
            /* Move 4 */
            82.5% { transform: scale(1.25, 0.75); }
            90% { transform: scale(1, 1); }
            
            /* Arrived (90-100%) */
            100% { transform: scale(1, 1); }
        }

        ::view-transition-group(permanent-island) {
            animation-duration: 2s;
            animation-timing-function: linear(
                0, 
                0.25 15%, 0.25 25%, 
                0.50 40%, 0.50 50%, 
                0.75 65%, 0.75 75%, 
                1 90%, 1 100%
            );
        }

        ::view-transition-image-pair(permanent-island) {
            /* Single synchronized run */
            animation: inchworm-crawl 2s linear;
        }
    </style>
    <rw:scripts />
    <script src="~/js/site.js" asp-append-version="true" data-turbo-eval="false"></script>
</head>
<body class="h-full flex flex-col font-outfit text-slate-900 overflow-x-hidden">
    <header class="bg-white/80 backdrop-blur-md sticky top-0 z-50 border-b border-slate-200">
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16 items-center">
                <div class="flex items-center gap-8">
                    <a class="text-xl font-bold bg-gradient-to-r from-indigo-600 to-violet-600 bg-clip-text text-transparent" asp-area="" asp-controller="Home" asp-action="Index">
                        RazorWire
                    </a>
                    <div class="hidden sm:flex gap-4">
                        <a class="text-sm font-medium text-slate-600 hover:text-indigo-600 transition-colors" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="text-sm font-medium text-slate-600 hover:text-indigo-600 transition-colors" asp-area="" asp-controller="Reactivity" asp-action="Index">Reactivity</a>
                        <a class="text-sm font-medium text-slate-600 hover:text-indigo-600 transition-colors" asp-area="" asp-controller="Navigation" asp-action="Index">Navigation</a>
                        <a class="text-sm font-medium text-slate-600 hover:text-indigo-600 transition-colors" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-grow py-8 overflow-y-auto">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            @RenderBody()
        </div>
    </main>

    <footer class="border-t border-slate-200 bg-white py-6 mt-auto">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center text-sm text-slate-500">
            <div>&copy; 2026 - RazorWire</div>
            <div>
                <a class="hover:text-indigo-600 transition-colors" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
            </div>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
