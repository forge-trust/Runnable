<div class="space-y-4">
    <div class="space-y-1">
        <h3 class="text-sm font-bold text-slate-800 uppercase tracking-tight">Identity</h3>
        <p class="text-xs text-slate-500">Pick a name to appear in the live feed.</p>
    </div>

    <form id="register-form" asp-action="RegisterUser" method="post" rw-active="true">
        <partial name="_RegisterForm"/>
    </form>

    <div class="pt-4 border-t border-slate-100">
        <rw:island id="user-list" src="/Reactivity/UserList" loading="lazy" swr requires-stream="reactivity">
            <div class="space-y-4">
                <div class="flex items-center justify-between">
                    <h4 class="text-xs font-bold text-slate-500 uppercase tracking-widest">Active Members</h4>
                    <span id="user-count" class="px-2 py-0.5 rounded-full bg-slate-100 text-[10px] font-bold text-slate-600 animate-pulse">
                        -- ONLINE
                    </span>
                </div>
                <ul id="user-list-items" class="space-y-2">
                    <li class="flex items-center gap-3 text-slate-400 min-h-[80px] items-start pt-2">
                        <div class="animate-pulse h-2 w-2 bg-slate-200 rounded-full mt-1.5"></div>
                        <span class="text-xs italic">Connecting to presence...</span>
                    </li>
                </ul>
            </div>
        </rw:island>
    </div>
</div>
