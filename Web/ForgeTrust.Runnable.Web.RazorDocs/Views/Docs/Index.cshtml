@model IEnumerable<ForgeTrust.Runnable.Web.RazorDocs.Models.DocNode>
@{
    ViewData["Title"] = "Documentation Index";
    var groupedDocs = Model.GroupBy(d => System.IO.Path.GetDirectoryName(d.Path) ?? "General");
}

@using System.Text.RegularExpressions

@functions {

    string ToAnchorId(string path)
    {
        return Regex.Replace(path, "[^a-zA-Z0-9_-]", "-");
    }

}

@section Sidebar {
    @foreach (var group in groupedDocs)
    {
        <div class="py-2">
            <h3 class="text-xs font-semibold text-slate-500 uppercase tracking-widest px-2 mb-2">@group.Key</h3>
            <ul class="space-y-1">
                @foreach (var doc in group)
                {
                    <li>
                        <a href="#doc-@ToAnchorId(doc.Path)"
                           class="block px-2 py-1.5 text-sm font-medium text-slate-400 hover:text-cyan-400 hover:bg-slate-900 rounded-md transition-all">
                            @doc.Title
                        </a>
                    </li>
                }
            </ul>
        </div>
    }
}

<div class="space-y-24">
    @foreach (var doc in Model)
    {
        <section id="doc-@ToAnchorId(doc.Path)" class="scroll-mt-24">
            <header class="mb-8">
                <div class="flex items-center gap-2 text-xs font-mono text-slate-500 mb-2">
                    <span class="px-2 py-0.5 rounded bg-slate-800 border border-slate-700">@doc.Path</span>
                </div>
                <h2 class="text-4xl font-bold text-white tracking-tight">@doc.Title</h2>
            </header>

            <div class="docs-content">
                @* Safe: Content is sanitized by DocAggregator before caching. *@
                @Html.Raw(doc.Content)
            </div>

            <div class="mt-12 pt-8 border-t border-slate-800/50 flex justify-between items-center text-xs text-slate-500">
                <span>Repository: @doc.Path</span>
                <a href="#" class="hover:text-slate-300 transition-colors">Back to top â†‘</a>
            </div>
        </section>
    }
</div>
