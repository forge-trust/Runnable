<div class="card-premium overflow-hidden">
    <div class="px-6 py-4 border-b border-slate-100 bg-slate-50/50 flex items-center justify-between">
        <h3 class="text-sm font-bold text-slate-800 uppercase tracking-tight">Permanent Island</h3>
        <span class="px-2 py-0.5 rounded text-[10px] font-bold bg-indigo-100 text-indigo-600 uppercase">Session</span>
    </div>

    <div class="p-6 space-y-4 animate-in fade-in slide-in-from-bottom-2 duration-[2000ms]">
        <div class="p-4 bg-indigo-50 border border-indigo-100 rounded-xl">
            <h4 class="text-sm font-bold text-indigo-900 mb-1 leading-none">Standalone Context</h4>
            <p class="text-xs text-indigo-700/80 leading-relaxed">This component persists across page transitions via Turbo's permanent data tracking.</p>
        </div>

        @await Component.InvokeAsync("Counter")

        <div class="flex items-center justify-between text-[10px] font-bold uppercase tracking-widest px-1 pt-2">
            <span class="text-slate-400">Sync Status</span>
            <time datetime="@DateTimeOffset.UtcNow" rw-type="local" class="text-indigo-600 font-mono"></time>
        </div>
    </div>
</div>
