<!DOCTYPE html>
<html lang="en" class="h-full bg-slate-900 border-slate-800" style="scrollbar-gutter: stable;">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - RazorDocs</title>
    <script src="https://unpkg.com/@@tailwindcss/browser@4.1.18" integrity="sha384-y0axVOJIfo0bJOmTOnyRyUjrqjUotl7L/k6mzSwu2SSrB3r7P+b0cSFkiod+js0X" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com"/>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin/>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet"/>
    <style type="text/tailwindcss">
        @@theme {
            --font-outfit: "Outfit", ui-sans-serif, system-ui;
        }
        body {
            font-family: var(--font-outfit);
            scrollbar-width: thin;
            scrollbar-color: #334155 #0f172a;
        }
        
        /* Custom scrollbar for dark theme */
        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }
        ::-webkit-scrollbar-track {
            background: #0f172a;
        }
        ::-webkit-scrollbar-thumb {
            background: #334155;
            border-radius: 4px;
        }
        ::-webkit-scrollbar-thumb:hover {
            background: #475569;
        }

        /* Standard scrollbar properties for Firefox and others */
        * {
            scrollbar-width: thin;
            scrollbar-color: #334155 #0f172a;
        }

        .docs-content {
            max-width: 80ch;
            color: #cbd5e1;
            font-size: 1.025rem;
            line-height: 1.75;
        }

        .docs-content .doc-type {
            margin-top: 2.5rem;
            padding-top: 1.5rem;
            border-top: 1px solid #1e293b;
        }

        .docs-content .doc-type:first-child {
            margin-top: 0;
            padding-top: 0;
            border-top: 0;
        }

        .docs-content .doc-type-header {
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            gap: 0.75rem;
            margin-bottom: 0.75rem;
        }

        .docs-content .doc-kind {
            display: inline-flex;
            align-items: center;
            border: 1px solid #334155;
            border-radius: 9999px;
            padding: 0.2rem 0.65rem;
            font-size: 0.7rem;
            letter-spacing: 0.08em;
            text-transform: uppercase;
            color: #93c5fd;
            background: rgba(30, 41, 59, 0.8);
            font-weight: 600;
        }

        .docs-content h2 {
            font-size: 1.95rem;
            line-height: 1.2;
            font-weight: 700;
            color: #f8fafc;
            margin: 0;
        }

        .docs-content .doc-method-group {
            margin: 1.25rem 0 0 1rem;
            padding-left: 1rem;
            border-left: 1px solid #1e293b;
        }

        .docs-content .doc-method-group-header {
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            gap: 0.75rem;
            margin-bottom: 0.75rem;
        }

        .docs-content h3 {
            font-size: 1.3rem;
            line-height: 1.35;
            margin: 0;
            color: #e2e8f0;
        }

        .docs-content .doc-overload-count {
            font-size: 0.78rem;
            color: #94a3b8;
        }

        .docs-content .doc-overload {
            border: 1px solid #334155;
            border-radius: 0.75rem;
            margin-bottom: 0.75rem;
            background: rgba(15, 23, 42, 0.55);
            overflow: hidden;
        }

        .docs-content .doc-overload > summary {
            cursor: pointer;
            list-style: none;
            padding: 0.85rem 1rem;
            display: flex;
            align-items: flex-start;
            gap: 0.6rem;
            background: rgba(15, 23, 42, 0.65);
        }

        .docs-content .doc-overload > summary::-webkit-details-marker {
            display: none;
        }

        .docs-content .doc-overload > summary::before {
            content: "+";
            color: #38bdf8;
            font-weight: 700;
            line-height: 1;
            margin-top: 0.15rem;
        }

        .docs-content .doc-overload[open] > summary::before {
            content: "-";
        }

        .docs-content .doc-overload > summary code {
            color: #e2e8f0;
            font-weight: 500;
            white-space: normal;
            word-break: break-word;
        }

        .docs-content .doc-signature .sig-return {
            color: #7dd3fc;
        }

        .docs-content .doc-signature .sig-method {
            color: #f8fafc;
            font-weight: 700;
        }

        .docs-content .doc-signature .sig-generic {
            color: #86efac;
        }

        .docs-content .doc-signature .sig-type {
            color: #a5b4fc;
        }

        .docs-content .doc-signature .sig-parameter {
            color: #fcd34d;
        }

        .docs-content .doc-signature .sig-modifier {
            color: #f9a8d4;
        }

        .docs-content .doc-signature .sig-operator {
            color: #cbd5e1;
        }

        .docs-content .doc-signature .sig-literal {
            color: #fca5a5;
        }

        .docs-content .doc-overload-body {
            padding: 0.9rem 1rem 1rem;
            border-top: 1px solid #1e293b;
        }

        .docs-content .doc-summary > p {
            margin: 0 0 0.8rem;
            color: #e2e8f0;
        }

        .docs-content .doc-namespace-intro {
            margin: 0 0 1.25rem;
            padding: 1rem 1.1rem;
            border: 1px solid #1e293b;
            border-radius: 0.75rem;
            background: rgba(15, 23, 42, 0.42);
        }

        .docs-content .doc-namespace-intro p:last-child {
            margin-bottom: 0;
        }

        .docs-content .doc-namespace-groups {
            margin: 0 0 1.1rem;
            padding: 0.85rem 1rem;
            border: 1px solid #1e293b;
            border-radius: 0.7rem;
            background: rgba(15, 23, 42, 0.32);
        }

        .docs-content .doc-namespace-groups ul {
            margin: 0.2rem 0 0;
            padding-left: 1rem;
        }

        .docs-content .doc-namespace-groups a {
            color: #7dd3fc;
        }

        .docs-content .doc-namespace-groups a:hover {
            color: #22d3ee;
        }

        .docs-content .doc-remarks > p {
            color: #94a3b8;
        }

        .docs-content .doc-typeparams,
        .docs-content .doc-params,
        .docs-content .doc-returns,
        .docs-content .doc-exceptions,
        .docs-content .doc-remarks,
        .docs-content .doc-example {
            margin-top: 0.9rem;
        }

        .docs-content h4 {
            margin: 0 0 0.4rem;
            font-size: 0.72rem;
            letter-spacing: 0.09em;
            text-transform: uppercase;
            color: #94a3b8;
            font-weight: 600;
        }

        .docs-content .doc-typeparams ul,
        .docs-content .doc-params ul,
        .docs-content .doc-exceptions ul {
            margin: 0;
            padding-left: 0;
            list-style: none;
            display: grid;
            gap: 0.45rem;
        }

        .docs-content .doc-typeparams li,
        .docs-content .doc-params li,
        .docs-content .doc-exceptions li {
            display: grid;
            grid-template-columns: minmax(9rem, auto) 1fr;
            gap: 0.7rem;
            align-items: start;
            color: #cbd5e1;
        }

        .docs-content .doc-typeparams li code,
        .docs-content .doc-params li code,
        .docs-content .doc-exceptions li code {
            background-color: #0f172a;
            border: 1px solid #334155;
            border-radius: 0.35rem;
            padding: 0.08rem 0.4rem;
            color: #93c5fd;
            font-size: 0.86rem;
            width: fit-content;
        }

        .docs-content p {
            margin: 0 0 0.75rem;
        }

        .docs-content pre {
            background-color: #1e293b;
            border-radius: 0.5rem;
            padding: 0.9rem;
            border: 1px solid #334155;
            white-space: pre-wrap;
            word-break: break-word;
            margin: 0.65rem 0 0.85rem;
            overflow-x: auto;
        }

        .docs-content code {
            font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", monospace;
        }

        @@media (max-width: 767px) {
            .docs-content {
                font-size: 0.97rem;
                line-height: 1.65;
            }

            .docs-content h2 {
                font-size: 1.55rem;
            }

            .docs-content .doc-method-group {
                margin-left: 0;
                padding-left: 0.75rem;
            }

            .docs-content .doc-typeparams li,
            .docs-content .doc-params li,
            .docs-content .doc-exceptions li {
                grid-template-columns: 1fr;
                gap: 0.3rem;
            }
        }
    </style>
    <link rel="stylesheet" href="~/docs/search.css" />
    <link rel="preload" href="~/docs/search-index.json" as="fetch" crossorigin="use-credentials" />
    <rw:scripts/>
    <script src="~/docs/minisearch.min.js" defer></script>
    <script src="~/docs/search-client.js" defer></script>
</head>
<body class="h-full flex flex-col text-slate-200 overflow-hidden">
<a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-0 focus:left-0 focus:z-50 focus:p-4 focus:bg-slate-900 focus:text-white">Skip to content</a>
<div class="flex h-full">
    <button id="docs-sidebar-overlay"
            class="fixed inset-0 z-30 bg-slate-950/70 backdrop-blur-sm hidden md:hidden"
            type="button"
            tabindex="-1"
            aria-label="Close navigation menu">
    </button>

    <!-- Sidebar -->
    <aside id="docs-sidebar"
           class="fixed inset-y-0 left-0 z-40 w-72 max-w-[90vw] flex-shrink-0 bg-slate-950 border-r border-slate-800 flex flex-col transform transition-transform duration-200 ease-out md:relative md:z-auto md:w-64 md:max-w-none md:translate-x-0"
           tabindex="-1"
           aria-hidden="false">
        <div class="flex items-center justify-between p-4 border-b border-slate-800 md:hidden">
            <a href="/docs" class="text-xl font-bold bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">
                RazorDocs
            </a>
            <button id="docs-sidebar-close"
                    type="button"
                    class="px-2 py-1 text-xs font-semibold tracking-wide uppercase text-slate-300 border border-slate-700 rounded-md hover:text-cyan-300 hover:border-cyan-500/50">
                Close
            </button>
        </div>
        <div class="hidden md:block p-6">
            <a href="/docs" class="text-2xl font-bold bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">
                RazorDocs
            </a>
        </div>
        <div id="docs-search-shell" class="px-4 pb-2">
            <label for="docs-search-input" class="sr-only">Search docs</label>
            <input id="docs-search-input"
                   type="search"
                   placeholder="Search docs..."
                   aria-label="Search documentation"
                   aria-autocomplete="list"
                   aria-controls="docs-search-results"
                   role="combobox"
                   autocomplete="off" />
            <p id="docs-search-status" class="mt-1 text-xs text-slate-500" aria-live="polite"></p>
            <ul id="docs-search-results" class="hidden" role="listbox" aria-label="Search results"></ul>
            <a href="/docs/search" class="mt-2 inline-block text-xs text-cyan-400 hover:text-cyan-300">
                Advanced search
            </a>
        </div>
        <nav class="flex-grow overflow-y-auto px-4 pb-4 space-y-1 min-h-0" aria-label="Documentation navigation">
            @await Component.InvokeAsync("Sidebar")
        </nav>
        <div class="p-4 border-t border-slate-800 text-xs text-slate-500 text-center">
            Powered by RazorWire
        </div>
    </aside>

    <!-- Main Content -->
    <main id="main-content" role="main" class="flex-grow min-w-0 overflow-y-auto bg-slate-900">
        <header class="md:hidden sticky top-0 z-20 border-b border-slate-800 bg-slate-950/95 backdrop-blur px-4 py-3 flex items-center gap-3">
            <button id="docs-sidebar-open"
                    type="button"
                    class="inline-flex items-center justify-center w-9 h-9 rounded-md border border-slate-700 text-slate-200 hover:text-cyan-300 hover:border-cyan-500/50"
                    aria-label="Open navigation menu"
                    aria-controls="docs-sidebar"
                    aria-expanded="false">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7h16M4 12h16M4 17h16" />
                </svg>
            </button>
            <a href="/docs" class="text-lg font-semibold text-white">RazorDocs</a>
            <a href="/docs/search" class="ml-auto text-xs font-semibold uppercase tracking-wide text-cyan-300 hover:text-cyan-200">Search</a>
        </header>
        <rw:island id="doc-content">
            <div class="max-w-6xl mx-auto px-4 py-6 sm:px-6 sm:py-8 lg:px-8 lg:py-12">
                @RenderBody()
            </div>
        </rw:island>
    </main>
</div>

@await RenderSectionAsync("Scripts", required: false)
<script>
    (() => {
        const sidebar = document.getElementById("docs-sidebar");
        const sidebarOverlay = document.getElementById("docs-sidebar-overlay");
        const openSidebarButton = document.getElementById("docs-sidebar-open");
        const closeSidebarButton = document.getElementById("docs-sidebar-close");
        const mainContent = document.getElementById("main-content");
        const mobileMedia = window.matchMedia ? window.matchMedia("(max-width: 767px)") : null;
        let lastFocusedBeforeSidebarOpen = null;

        function shouldAutoCloseSidebar() {
            return mobileMedia ? mobileMedia.matches : window.innerWidth < 768;
        }

        function isSidebarOpen() {
            return !!sidebar && !sidebar.classList.contains("-translate-x-full");
        }

        function getSidebarFocusableElements() {
            if (!sidebar) {
                return [];
            }

            const focusableSelector = [
                "a[href]",
                "button:not([disabled])",
                "input:not([disabled])",
                "select:not([disabled])",
                "textarea:not([disabled])",
                "[tabindex]:not([tabindex='-1'])"
            ].join(",");

            return Array.from(sidebar.querySelectorAll(focusableSelector))
                .filter(element => {
                    if (!(element instanceof HTMLElement)) {
                        return false;
                    }

                    const styles = window.getComputedStyle(element);
                    return styles.display !== "none" && styles.visibility !== "hidden";
                });
        }

        function setMainInteractivityDisabled(disabled) {
            if (!mainContent) {
                return;
            }

            if (disabled) {
                mainContent.setAttribute("aria-hidden", "true");
                mainContent.setAttribute("inert", "");
                return;
            }

            mainContent.removeAttribute("aria-hidden");
            mainContent.removeAttribute("inert");
        }

        function setSidebarModalAttributes(isModalOpen) {
            if (!sidebar) {
                return;
            }

            if (isModalOpen) {
                sidebar.setAttribute("role", "dialog");
                sidebar.setAttribute("aria-modal", "true");
                sidebar.setAttribute("aria-label", "Documentation navigation");
                sidebar.setAttribute("aria-hidden", "false");
                return;
            }

            sidebar.removeAttribute("role");
            sidebar.removeAttribute("aria-modal");
            sidebar.removeAttribute("aria-label");
            sidebar.setAttribute("aria-hidden", shouldAutoCloseSidebar() ? "true" : "false");
        }

        function closeSidebar({ restoreFocus = true } = {}) {
            if (!sidebar || !sidebarOverlay) {
                return;
            }

            sidebar.classList.add("-translate-x-full");
            sidebarOverlay.classList.add("hidden");
            if (openSidebarButton) {
                openSidebarButton.setAttribute("aria-expanded", "false");
            }

            setMainInteractivityDisabled(false);
            setSidebarModalAttributes(false);

            if (restoreFocus && lastFocusedBeforeSidebarOpen instanceof HTMLElement) {
                lastFocusedBeforeSidebarOpen.focus();
            }

            lastFocusedBeforeSidebarOpen = null;
        }

        function openSidebar() {
            if (!sidebar || !sidebarOverlay) {
                return;
            }

            if (shouldAutoCloseSidebar() && document.activeElement instanceof HTMLElement) {
                lastFocusedBeforeSidebarOpen = document.activeElement;
            }

            sidebar.classList.remove("-translate-x-full");
            sidebarOverlay.classList.remove("hidden");
            if (openSidebarButton) {
                openSidebarButton.setAttribute("aria-expanded", "true");
            }

            if (!shouldAutoCloseSidebar()) {
                setMainInteractivityDisabled(false);
                setSidebarModalAttributes(false);
                return;
            }

            setMainInteractivityDisabled(true);
            setSidebarModalAttributes(true);

            const focusableElements = getSidebarFocusableElements();
            const firstFocusable = focusableElements[0] ?? sidebar;
            if (firstFocusable instanceof HTMLElement) {
                firstFocusable.focus();
            }
        }

        function syncSidebarForViewport() {
            if (!sidebar || !sidebarOverlay) {
                return;
            }

            if (shouldAutoCloseSidebar()) {
                closeSidebar({ restoreFocus: false });
                return;
            }

            sidebar.classList.remove("-translate-x-full");
            sidebarOverlay.classList.add("hidden");
            if (openSidebarButton) {
                openSidebarButton.setAttribute("aria-expanded", "false");
            }
            setMainInteractivityDisabled(false);
            setSidebarModalAttributes(false);
        }

        openSidebarButton?.addEventListener("click", openSidebar);
        closeSidebarButton?.addEventListener("click", () => closeSidebar());
        sidebarOverlay?.addEventListener("click", () => closeSidebar());

        document.addEventListener("keydown", event => {
            if (event.key === "Escape" && isSidebarOpen() && shouldAutoCloseSidebar()) {
                closeSidebar();
                return;
            }

            if (event.key !== "Tab" || !isSidebarOpen() || !shouldAutoCloseSidebar() || !sidebar) {
                return;
            }

            const focusableElements = getSidebarFocusableElements();
            if (focusableElements.length === 0) {
                event.preventDefault();
                sidebar.focus();
                return;
            }

            const firstFocusable = focusableElements[0];
            const lastFocusable = focusableElements[focusableElements.length - 1];

            if (event.shiftKey && document.activeElement === firstFocusable) {
                event.preventDefault();
                lastFocusable.focus();
                return;
            }

            if (!event.shiftKey && document.activeElement === lastFocusable) {
                event.preventDefault();
                firstFocusable.focus();
            }
        });

        if (sidebar) {
            sidebar.classList.add("transition-none");
        }
        syncSidebarForViewport();
        if (sidebar) {
            const restoreSidebarTransitions = () => {
                sidebar.classList.remove("transition-none");
            };

            if (typeof requestAnimationFrame === "function") {
                requestAnimationFrame(restoreSidebarTransitions);
            } else {
                setTimeout(restoreSidebarTransitions, 0);
            }
        }

        mobileMedia?.addEventListener("change", () => {
            syncSidebarForViewport();
        });

        document.addEventListener("click", event => {
            if (event.defaultPrevented) {
                return;
            }

            if (event.button !== 0 || event.metaKey || event.ctrlKey || event.shiftKey || event.altKey) {
                return;
            }

            const clickTarget = event.target;
            if (!(clickTarget instanceof Element)) {
                return;
            }

            const sidebarNavLink = clickTarget.closest("#docs-sidebar a");
            if (sidebarNavLink && shouldAutoCloseSidebar()) {
                closeSidebar();
            }

            const anchorLink = clickTarget.closest("a[data-doc-anchor-link='true']");
            if (!anchorLink) {
                return;
            }

            if (anchorLink.target && anchorLink.target !== "_self") {
                return;
            }

            const targetUrl = new URL(anchorLink.href, window.location.origin);
            if (targetUrl.pathname !== window.location.pathname
                || targetUrl.search !== window.location.search
                || !targetUrl.hash) {
                return;
            }

            let targetId;
            try {
                targetId = decodeURIComponent(targetUrl.hash.slice(1));
            } catch {
                return;
            }

            const target = document.getElementById(targetId);
            if (!target) {
                return;
            }

            event.preventDefault();
            history.replaceState(null, "", targetUrl.hash);
            const prefersReducedMotion = window.matchMedia
                && window.matchMedia("(prefers-reduced-motion: reduce)").matches;
            const scrollBehavior = prefersReducedMotion ? "auto" : "smooth";
            target.scrollIntoView({ behavior: scrollBehavior, block: "start" });
        });
    })();
</script>
</body>
</html>
